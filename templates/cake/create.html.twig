{% extends 'base.html.twig' %}

{% block content %}
<section class="container">
    <article>
        <header>
            <h1>{{ 'Create a cake'|trans }}</h1>
        </header>
        {{ form_start(form, {
            'attr': { 
                'novalidate': 'novalidate'
            }
        }) }}
            {{ form_widget(form) }}
            <div class="row">
                <div class="col">
                    <a class="btn btn-block btn-default" href="{{ path('app_cake_list') }}">
                        Cancel
                    </a>
                </div>
                <div class="col">
                    <input class="btn btn-block btn-primary" type="submit" value="Create" />
                </div>
            </div>
        {{ form_end(form) }}
    </article>
</section>
{% endblock %}
